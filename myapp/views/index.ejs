<!DOCTYPE html>
<html lang="en">
    <html>
        <%- include('./partials/head') %> 
        <body>
            <%- include('./partials/headerLogueado') %> 
    <main>
        <div class="uk-section uk-section-small">
            <div class="uk-container uk-container-large uk-flex">
                <section id="posts" class="uk-flex uk-flex-middle uk-flex-center uk-flex-column uk-child-width-1-2 uk-width-1-1">
                    <% for (let i=0; i < listaPosteos.length && i< listaUsuarios.length; i++) { %> 
                    <article class="post uk-card-default uk-flex uk-flex-column">
                        <div class="info-usuario uk-flex ">
        
                            <div>
                                <img src="./imagenesUsuarios<%= listaUsuarios[i].fotoDePerfil %>" alt="">
                            </div>
                            <h4 class="usuario"><a href="/users/detalleUsuario/id/<%= listaPosteos[i].idUsuarioQueLoCreo %> "><%= listaUsuarios[i].nombre %> <%= listaUsuarios[i].apellido %></a></h4>
                            
                        </div>
                        <div class="post-body uk-flex uk-flex-center">
                            <a href="/posts/detallePost/id/<%= listaPosteos[i].id %>"> 
                                <img src="./imagenesPosteos<%= listaPosteos[i].campoImagen %>" alt="">
                            </a>
                        </div>
                        <div class="post-reacciones">
                            <ul class="post-icons uk-flex uk-flex-between">
                                <li><span class="" uk-icon="icon:heart; ratio: 1.3"></span>
                                </li>
                                <li><span class="" uk-icon="icon:comments; ratio: 1.3"></span>
                                </li>
                            </ul>
                            <div class="post-pie uk-flex">
                                <h5 class="usuario uk-width-1-6"><a href="/users/detalleUsuario/id/<%= listaPosteos[i].idUsuarioQueLoCreo %>"><%= listaUsuarios[i].nombre %> <%= listaUsuarios[i].apellido %></a></h5>
                                <p class="uk-width-5-6"><%= listaPosteos[i].campoTextoDescriptivo %> </p>
                            </div>
                        </div>
                        <div class="post-comentarios">
                            <h6>Comentarios</h6>
                            <ul>
                                <li>
                                    <a href="/users/detalleUsuario">Leo Messi</a>
                                    <p>Hola, bonita foto</p>
                                </li>
                                <li>
                                    <a href="/users/detalleUsuario">Luis Carlos</a>
                                    <p>Genial tu foto</p>
                                </li>
                                <a href="">Ver m√°s...</a>
                            </ul>
                        </div>
                    </article>
                    <% } %> 
                </section>

            </div>
        </div>
    </main>

    <%- include('./partials/footer') %> 

</body>

</html>