<!DOCTYPE html>
<html>
    <%- include('./partials/head') %> 
    <body>
        <%- include('./partials/headerLogueado') %> 
    <main>
        <div class="uk-section uk-section-small">
            <div class="uk-container uk-container-small">
                <!-- Datos del usuario -->
                <section class="info-usuario uk-flex uk-flex-around uk-width-1-1">
                    <div class="uk-width-1-3 uk-flex uk-flex-center uk-flex-middle">
                        <img src="/imagenesUsuarios/<%= usuarios.lista.fotoDePerfil %> " alt="foto de perfil" class="foto-perfil">
                    </div>
                    <div class="uk-width-2-3 uk-flex uk-flex-column uk-flex-around">
                        <div class="uk-flex uk-flex-middle">
                            <h1 class="subtitulo">Mi perfil</h1>
                            <h3 class="uk-margin-remove"><%= usuarios.lista.nombre%> <%= usuarios.lista.apellido %></h3>
                            <h3 class="uk-margin-remove"><%= usuarios.lista.email %></h3>
                            <h3 class="uk-margin-remove"><%= usuarios.lista.documento %></h3>
                            <h3 class="uk-margin-remove"><%= usuarios.lista.edad %></h3>

                            <a href="/users/editarPerfil" uk-icon="icon:cog; ratio: 1.2" class="uk-margin-left"></a>
                        </div>
                        <div>
                            <ul class="red-usuario uk-flex uk-flex-between uk-width-1-2">
                                <li>2 posts</li>
                                <li>50k seguidores</li>
                                <li>600 seguidos</li>
                            </ul>
                        </div>
                    </div>

                </section>

                <section class="muro uk-flex uk-flex-middle uk-flex-center">
                    <div class="uk-grid uk-child-width-1-3 uk-width-1-1 uk-margin-remove">
                        <% for(let i=0; i < 11 ; i++ ) { %>
                            <div class="uk-card uk-card-hover uk-card-body uk-flex uk-flex-column uk-flex-middle uk-flex-center ">
                                <a href="/posts/detallePost/id/<%usuarios.lista[i].id%>" class="link-detalle">
                                    <img src="/imagenesUsuarios/foto<%[i+1]%>" alt="foto de perfil" class="foto-perfil">
                                    <p class="uk-text-center">Lorem ipsum</p>
                                </a>
                            </div>
                        <% } %>
                    </div>
                </section>
            </div>
        </div>
    </main>
    <%- include('./partials/footer') %> 

</body>

</html>