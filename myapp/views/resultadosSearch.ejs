<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>
    <% if (usuario) { %>
    <%- include('./partials/headerLogueado') %>
    <% } else{ %>
    <%- include('./partials/headerDeslogueado') %>
    <% } %>

    <main>
        <% if (usuarios.length >0) { %>
        <div class="uk-grid uk-child-width-1-3 uk-width-1-1 uk-margin-remove" uk-grid>
            <% for( let i=0; i<usuarios.length; i++) { %>
            <div class="uk-card uk-card-hover uk-card-body uk-flex uk-flex-column uk-flex-middle uk-flex-center ">
                <div class="info-usuario uk-flex ">
                    <div>
                        <img src="<%=usuarios[i].fotoDePerfil%>" alt="foto de perfil">
                    </div>
                    <h4><a href="/users/detalleUsuario/id/<%=usuarios[i].id%>"><%=usuarios[i].nombreDeUsuario%></a>
                    </h4>
                </div>
            </div>
            <% } %>

        </div>
        <% }else{ %>
        <h3>No existen resultados</h3>
        <% } %>
        </div>
    </main>

    <%- include('./partials/footer') %>

